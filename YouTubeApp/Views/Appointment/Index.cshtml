@model IEnumerable<Appointment>
<h2>Appointments</h2>
<a asp-action="Create" >Добавить запись</a>
<table>
    <thead>
        <tr>
            <th class="text-center">Имя</th>
            <th class="text-center">Фамилия</th>
            <th class="text-center">Почта</th>
            <th class="text-center">Адрес</th>
            <th class="text-center">Телефон</th>
            <th class="text-center">Дата записи</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var appointment in Model)
    {
        <tr>
            <td>@appointment.Patient.FirstName</td>
            <td>@appointment.Patient.LastName</td>
            <td>@appointment.Patient.Email</td>
            <td>@appointment.Patient.Address</td>
            <td>@appointment.Patient.PhoneNumber</td>
            <td>@appointment.TimeOfVisit</td>
        </tr>
    }
    </tbody>
</table>
