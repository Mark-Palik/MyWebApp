@using YouTubeApp.ViewModels;

@model PatientAppointment

<form asp-action="Create" asp-controller="Appointment">

    <div class="form-group">
        <label asp-for="Patient.FirstName" class="control-label">Name</label>
        <input type="text" asp-for="Patient.FirstName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Patient.LastName" class="control-label">Last Name</label>
        <input type="text" asp-for="Patient.LastName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Patient.Email" class="control-label">Email</label>
        <input type="text" asp-for="Patient.Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Patient.Address" class="control-label">Address</label>
        <input type="text" asp-for="Patient.Address" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Patient.PhoneNumber" class="control-label">Phone Number</label>
        <input type="text" asp-for="Patient.PhoneNumber" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Appointment.TimeOfVisit" class="control-label">Date of Appointment</label>
        @*<input type="datetime-local" asp-for="Appointment.TimeOfVisit" name="Time Of Visit" id="TimeOfVisit" data-date-format="{0:yyyy-MM-dd HH}" asp-format="{0:yyyy-MM-dd HH}" class="form-control" />*@
        <input type="text" asp-for="Appointment.TimeOfVisit" class="form-control" />
    </div>

    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-default" />
    </div>
</form>