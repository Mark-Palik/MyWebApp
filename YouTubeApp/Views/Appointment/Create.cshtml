@using YouTubeApp.ViewModels;

@model PatientAppointment

<form asp-action="Create" asp-controller="Appointment">

    <div class="form-group">
        <label asp-for="Patient.FirstName" class="control-label">Имя</label>
        <input type="text" asp-for="Patient.FirstName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Patient.LastName" class="control-label">Фамилия</label>
        <input type="text" asp-for="Patient.LastName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Patient.Email" class="control-label">Электронная почта</label>
        <input type="text" asp-for="Patient.Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Patient.Address" class="control-label">Адрес</label>
        <input type="text" asp-for="Patient.Address" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Patient.PhoneNumber" class="control-label">Телефон</label>
        <input type="text" asp-for="Patient.PhoneNumber" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Appointment.TimeOfVisit" class="control-label">Дата приёма</label>
        <input type="datetime-local" asp-for="Appointment.TimeOfVisit" name="Time Of Visit" id="TimeOfVisit" data-date-format="{0:yyyy-MM-dd HH}" asp-format="{0:yyyy-MM-dd HH}" class="form-control" />
    </div>

    <div class="form-group">
        <input type="submit" value="Отправить" class="btn btn-default" />
    </div>
</form>