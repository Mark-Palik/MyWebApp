@model IEnumerable<Patient>
<a asp-action="Create" >Добавить пациента</a>
    <table>
        <thead>
            <tr>
                <th>Id пациента</th>
                <th>Имя пациента</th>
                <th>Фамилия пациента</th>
                <th>Электронная почта</th>
                <th>Адрес</th>
                <th>Телефон</th>
            </tr>
        </thead>
        <tbody>
            
            @foreach (var patient in Model)
            {
                   <tr> 
                       <td>@patient.PatientId</td>
                       <td>@patient.FirstName</td>
                       <td>@patient.LastName</td>
                       <td>@patient.Email</td>
                       <td>@patient.Address</td>
                       <td>@patient.PhoneNumber</td>
                    <td>
                        <a asp-action="Edit" asp-controller="Patient" asp-route-id="@patient.PatientId">Изменить</a>
                    </td>
                    <td>
                        <form asp-controller="Patient" asp-action="Delete" method="post" asp-route-id="@patient.PatientId">
                        <input type="submit" value="Удалить" />
                        </form>
                    </td>
                   </tr>
            }
        </tbody>
    </table>